{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:@next/next/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "tsconfig.json"
    ],
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "root": true,
  "rules": {
    "brace-style": "error",
    "camelcase": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "curly": [
      "error"
    ],
    "import/no-default-export": 0,
    "import/prefer-default-export": 0,
    "indent": [
      "error",
      2,
      {
        "ObjectExpression": 1
      }
    ],
    "jsx-no-lambda": 0,
    "jsx-no-multiline-js": 0,
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "new-parens": 2,
    "no-bitwise": 2,
    "no-console": 1,
    "no-empty-interface": 0,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ],
    "react/react-in-jsx-scope": 0,
    "react/function-component-definition": [
      "error",
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }
    ],
    "react/prop-types": 0,
    "react/jsx-max-props-per-line": [
      1,
      {
        "maximum": 1
      }
    ],
    "react/jsx-props-no-spreading": 0,
    "react/jsx-sort-props": [
      1,
      {
        "callbacksLast": true,
        "shorthandFirst": true,
        "ignoreCase": false
      }
    ],
    "sort-vars": [
      "error",
      {
        "ignoreCase": false
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
